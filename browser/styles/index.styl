mMobileWidth = 640px

.masthead

    background-color cream
    height 100vh
    width 100vw
    display table-cell
    vertical-align middle
    text-align center

    h2
        text-shadow 0 1px 6px rgba(0, 0, 0, 0.1)
        color slate * 1.5
        .spacer { display: none; }
        @media only screen and (max-width: mMobileWidth)
            .spacer { display: inline; }
            font-size 2rem
            margin-bottom @font-size * 3.5

.about

    padding-top 2rem
    width 100%
    background-color slate
    .contents
        margin 3rem auto
        margin-bottom 0
        max-width mMobileWidth
        width 90vw
    color ivory

    h4

        color ivory
        text-align center

    p
        text-rendering geometricPrecision

    .avatar

        margin 3rem auto
        border-radius 50%
        border 0.15rem solid cream
        display block
        height 6rem

nav.nav-links
    text-align center
    position absolute
    bottom 5vh
    left 0
    right 0

aside.nav-links
    margin 3rem auto
    margin-bottom 0
    padding-bottom 5rem
    text-align center

.cutout

    &, &:active, &:focus, &:link, &:visited, &:hover
        font-weight 900

    border 0.24rem solid
    color brick
    display inline-block
    font-family "calluna-sans", "Helvetica Neue", "Segoe UI", sans-serif
    font-size 0.75rem
    font-weight 900
    margin auto 0.8rem
    min-width 4rem
    padding 0.05rem 0.4rem
    text-align center
    text-transform uppercase
    transition all 0.15s ease-out

    &:hover  { color: flame; text-decoration: none; }
    &:active { color: slate * 3; }
