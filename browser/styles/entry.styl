mDesktopWidth = 1024px

.sidebar
    background-color orange

.entry

    width 100vw
    background-color cream
    padding-bottom 2rem

    article

        margin 0rem auto
        padding-top 1.5rem
        width 90vw
        max-width 640px

        color slate

        section
            text-rendering optimizeLegibility
            margin-left 0.25rem

        header
            margin-bottom 1rem

            h2

                margin-bottom 0.25rem
                line-height 2.25rem


            time

                font-family "proxima-nova"
                font-weight bold
                color slate + slate + slate
                font-size 1.1rem
                margin-left 0.1rem


        @media only screen and (min-width: 860px)
            max-width 768px
            padding-left 10rem
