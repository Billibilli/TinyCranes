// Desktop Displays
@media (min-width 640px)

    .title
        font-size 3rem
        margin-bottom 0.5rem
    .subtitle
        font-size 1.5rem
    .contact
        margin 24px
    .links
        font-size 0.75rem
    .content
        margin 0.65rem

// Mobile Devices
@media (max-width 640px)

    .title
        font-size 11vw
        margin 0.25rem auto
    .subtitle
        font-size 5vw
        margin 0rem auto
    .contact
        margin 2rem auto
    .muted
        margin-top 1rem
        margin-bottom 6rem
    .links
        font-size 0vw
    .content
        margin 0.25rem
        margin-bottom 0.75rem
    .text
        font-size 1.2rem
        line-height 1.4rem
