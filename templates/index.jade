doctype html
html

    head

        // This is the dirtiest code I have ever shipped ... (ಠ_ಠ)
        //- Define Page Attributes
        title TinyCranes • Index
        meta(charset="utf-8")
        meta(name="viewport" content="minimal-ui, width=device-width")
        meta(name="author" content="Kevin Fung")
        meta(name="description" content="Freelance software design and development. I make elegant things. Let's chat!")

        //- Load Typekit Web Fonts
        include tracking.jade
        script(src="//use.typekit.net/igt0vbc.js")
        script try{Typekit.load();}catch(e){}

        //- Load Required Stylesheets
        link(rel="stylesheet" href="index.css")

    body

        //- Vertically Centered Contents
        section.wrapper.fixed
            div.middle(data-scroll-reveal="enter top over 1s")

                //- Masthead
                h1.title Design is Visceral
                div: span.subtitle Hey, I'm Kevin. I make elegant things.
                a.contact(href="mailto:mail@tinycranes.com") Contact Me

                //- Headlines
                aside.muted
                    h4.cycle Aspiring Game Designer
                    h4.cycle Creative Problem-Solver
                    h4.cycle Freelance Software Developer
                    h4.cycle Origami Enthusiast

            //- Navigation
            nav.links(data-scroll-reveal="enter bottom after 0.5s over 1s")
                a.cutout(href="static/resume.pdf" target="_blank") Résumé
                a.cutout(href="#portfolio") Portfolio
                a.cutout(href="//github.com/Polytonic/" target="_blank") GitHub

        div.push
        //- Include Portfolio Pieces
        section.container#portfolio

            div.pure-g
                include flows
                include winter
                include hunt-and-peck
                include sticks-and-stones
                include trajectory

                //- Invisible Element to Left-Align on Odd Numbers
                //- div.pure-u-1.pure-u-sm-1-1.pure-u-md-2-5.pure-u-lg-3-10

            div.pure-g
                include midnight
                include fidelis
                include goliath
                include footsteps
                include apostrophe
                include vertigo
                include rotary
                include monotony
                include lost-manuscript
                include mockingbird
                //- Invisible Element to Left-Align on Odd Numbers
                div.pure-u-1.pure-u-sm-1-1.pure-u-md-2-5.pure-u-lg-3-10

        //- Load Required Scripts
        script(src="bower_components/jquery/dist/jquery.min.js")
        script(src="bower_components/scroll-reveal/dist/scrollReveal.min.js")
        script(src="bower_components/slick-carousel/slick/slick.min.js")
        script(src="index.js")
